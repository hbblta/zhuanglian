/* pages/decoration/commission/commission.wxss */
page{
  background: #f7f7f7;
  height: 100%;
}
.commissionType{
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  background: #FFFFFF;
  align-items: center;
  color: rgba(144, 147, 153, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  width: 100%;
}
.commissionType .nowCommissionType{
  color: #0081FF;
  font-weight: 550;
}
.generalSelectionBody{
  display: flex;
  height: 76%;
  overflow: hidden;
}
.generalSelectionlist{
  width: 200rpx;
  margin-top: 15rpx;
  background: #FFFFFF;
  margin-right: 18rpx;
}
.generalSelectionlist .generalSelectionlistTitle{
  width: 200rpx;
  height: 120rpx;
  text-align: center;
  font-family: Arial;
  font-size: 28rpx;
  color: #909399;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
}
.generalSelectionlistTitle icon{
  position: absolute;
  right: 15rpx;
  top: 15rpx;
  background: #FF7200;
  border-radius:50%;
  width: 15rpx;
  height: 15rpx;
}
.generalSelectionlist .generalSelectionCurrent{
  background: #0081FF;
  color: #FFFFFF;
  font-weight: 550;
}
.effectPictureChecklistData{
  overflow: auto;
}
.searchInputViewBody{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  background: #FFFFFF;
  padding: 12rpx;
  width: 486rpx;
}
.searchInputView{
  display: flex;
  align-items: center;
  background-color: rgba(247, 247, 247, 1);
  padding-left: 20rpx;
  width: 466rpx;
}
.searchInputView .searchInput{
  width: 430rpx;
  height: 76rpx;
  border-radius: 12rpx;
  background-color: rgba(247, 247, 247, 1);
  font-family: PingFangSC-regular;
  font-size: 28rpx;
}
.commissionUser{
  width: 480rpx;
  display: flex;
  padding: 20rpx 15rpx;
  height: 160rpx;
  margin-bottom: 15rpx;
  background: #FFFFFF;
}
.commissionUserImg {
  height: 160rpx;
  width: 160rpx;
  border-radius: 8rpx;
  background: #DDDDDD;
  margin-right:20rpx;
}
.commissionUserImg image{
  height: 160rpx;
  height: 160rpx;
}
.commissionUserData{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}
.commissionUserData view{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.commissionUserData view:nth-child(1){
  color: #4C4D4F;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
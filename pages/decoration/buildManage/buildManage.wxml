<!--pages/decoration/effectPicture/effectPicture.wxml-->
<generalSelectionlist textList='{{textList}}' bind:getList="getList">
  <scroll-view slot="before" scroll-x="true" class="materialOrderStatusList">
    <view class="materialOrderStatus materialOrderStatusNow">全部</view>
      <view  class="materialOrderStatus">上架</view>
      <view  class="materialOrderStatus">下架</view>
    <view  class="materialOrderStatus">上架</view>
  </scroll-view>
  <view slot="after" class="materialOrderScroll">
      <view 
      wx:for='{{list}}' 
      wx:for-item='item' 
      wx:for-index="listIndex" 
      wx:key='listIndex' 
      class="materialOrderList">
        <view class="tip">{{textList[textIndex].name}}</view>
        <view class="materialOrderListImg"><image src="{{item.url}}"></image></view>
        <view class="materialOrderListText">
          <view>{{item.name}}</view>
          <view>{{item.phone}}</view>
          <view>成交时间：{{item.entryTime}}</view>
          <view>项目经理：{{item.name}}</view>
        </view>
        <view class="home">
          <view>小区名称：分业小区2幢2单元88室</view>
        </view>
      </view>
  </view>

</generalSelectionlist>


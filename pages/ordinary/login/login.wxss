/* pages/ordinary/login/login.wxss */
.loginTitle{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  text-align: center;
  margin-top: 70rpx;
}
.loginView{
  margin-top: 70rpx;
  width: 605rpx;
  padding: 30rpx 35rpx 30rpx 60rpx;
  margin-left: 25rpx;
  background: #E2EEFB;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.loginViewIcon image{
  width: 108rpx;
  height: 108rpx;
}
.loginViewIcon view{
  color: rgba(0, 129, 255, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  text-align: center;
}
.loginViewType view{
  width: 176rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 60rpx;
  color: rgba(0, 129, 255, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Arial;
  border: 2rpx solid rgba(255, 255, 255, 0);
  background: #FFFFFF;
}
.loginViewType view:nth-child(2){
  margin-top: 20rpx;
}
.orangeFont{
  color: #FF7200!important;
}
.orangeBack{
  background:#FFEEDF;
}
.applicationBk{
  width: 100%;
  height: 240rpx;
  position: absolute;
  z-index: -1;
  bottom: 0;
}
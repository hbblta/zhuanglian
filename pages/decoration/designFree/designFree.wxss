/* pages/decoration/designFree/designFree.wxss */
.applicationBk{
  width: 100%;
  height: 240rpx;
  position: absolute;
  z-index: -1;
  bottom: 0;
}
.decorationStaffInput input,.decorationStaffInput .inputClass{
  margin-top: 30rpx;
  width: 640rpx;
  margin-left: 25rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: rgba(247, 247, 247, 1);
  font-size: 28rpx;
  font-family: Arial;
  line-height: 80rpx;
}
.decorationStaffPact{
  margin-left: 25rpx;
  display: flex;
  height: 50rpx;
  margin-top: 50rpx;
  align-items: center;
}
.decorationStaffPact image{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}
.decorationStaffPact text:nth-child(2){
  color: rgba(146, 146, 146, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.decorationStaffPact text:nth-child(3){
  color: #FF7C13;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.decorationStaffButton{
  margin-left: 25rpx;
  margin-top: 50rpx;
  width: 700rpx !important;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 129, 255, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 24rpx;
  text-align: center;
  font-family: Arial;
  padding: 0;
}
.decorationCalculatorBroadcast{
  display: flex;
  background: #FFFFFF;
  align-items: center;
  height: 100rpx;
  width: 720rpx;
  padding-left: 30rpx;
}
.decorationCalculatorBroadcast image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.decorationCalculatorBroadcast text{
  color: rgba(144, 147, 153, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.designFreeTitle{
  width: 700rpx;
  margin-left: 25rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: rgba(95, 63, 48, 100);
  font-size: 28rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  border-radius: 8rpx;
  background: #FCECDD;
  margin-top: 20rpx;
}
.designFreeBottom{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  width: 100%;
}
.designFreeBottom .designFreeBottomIcon{
  text-align: center;
  color: rgba(191, 194, 204, 100);
  font-size:  20rpx;
  text-align: left;
  font-family: PingFangSC-regular
}
.designFreeBottom .designFreeBottomIcon image{
  width: 50rpx;
  height:  50rpx;
}
.designFreeBottomChat{
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 129, 255, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
}
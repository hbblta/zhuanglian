/* pages/decoration/caseDetails/caseDetails.wxss */
page{
  background: #f7f7f7;
}
.swiperBox{
  height: 560rpx;
}
.swiperBox swiper{
  height: 100%;
  width: 100%;
}
.swiperBox swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
.designFreeBottom{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  width: 100%;
  background:#ffffff;
}
.designFreeBottom .designFreeBottomIcon{
  text-align: center;
  color: rgba(191, 194, 204, 100);
  font-size:  20rpx;
  text-align: left;
  font-family: PingFangSC-regular
}
.designFreeBottom .designFreeBottomIcon image{
  width: 50rpx;
  height:  50rpx;
}
.designFreeBottomChat{
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 129, 255, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
}
.decorationRecordingStyle{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.decorationRecordingStyle text:nth-child(2){
  margin-left: 50rpx;
}
.decorationRecordingMeun{
  display: flex;
}
.decorationRecordingMeunTitle{
  display: flex;
  align-items: center;
}
.decorationRecordingMeunTitle image:nth-child(1){
  width: 45rpx;
  height: 45rpx;
}
.decorationRecordingMeunTitle text:nth-child(2){
  color: rgba(144, 147, 153, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  margin-left: 15rpx;
  margin-right: 6rpx;
}
.decorationRecordingMeunTitle image:nth-child(3){
  width: 30rpx;
  height: 30rpx;
}
.caseTitle{
  color: rgba(48, 49, 51, 100);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.caseView{
  width: 710rpx;
  height: 170rpx;
  padding: 15rpx 20rpx;
  background: #ffffff;
}
.propertyName{
  height: 100rpx;
  line-height: 100rpx;
  color: rgba(48, 49, 51, 100);
  font-size: 40rpx;
  font-weight: 550;
  font-family: PingFangSC-bold;
  width: 690rpx;
  padding: 0 30rpx;
  margin: 15rpx 0;
  background: #FFFFFF;
}
.goOffer{
  width: 700rpx;
  height: 180rpx;
  margin:25rpx;
}
.houseList{
  height: 80rpx;
  line-height: 80rpx;
  color: rgba(48, 49, 51, 100);
  font-size: 30rpx;
  font-weight: 550;
  font-family: PingFangSC-bold;
  width: 690rpx;
  padding: 0 30rpx;
}
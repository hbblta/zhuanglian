/* components/searchTitle/searchTitle.wxss */
.indexHeader{
  display: flex;
  justify-content:space-around;
  height: 100rpx;
  align-items: center;
  background: #FFFFFF;
}
.searchInputView{
  display: flex;
  align-items: center;
  background-color: rgba(247, 247, 247, 1);
  padding-left: 15rpx;
  width: 720rpx;
  border-radius: 12rpx;
}
.searchInputView .searchInput{
  width: 640rpx;
  height: 76rpx;
  border-radius: 12rpx;
  background-color: rgba(247, 247, 247, 1);
  font-family: PingFangSC-regular;
  font-size: 28rpx;
}
.materialOrderStatusList{
  white-space: nowrap;  
  height: 100rpx;
  width: 100%;
  background: #FFFFFF;
}
.materialOrderStatus{
  display: inline-block;
  padding: 24rpx 16rpx;
  color: rgba(144, 147, 153, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.materialOrderStatusNow{
  color: rgba(0, 129, 255, 1);
  font-weight: 550;
}
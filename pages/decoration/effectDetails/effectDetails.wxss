/* pages/decoration/effectDetails/effectDetails.wxss */
page{
  background: #f7f7f7;
}
.swiperBox{
  height: 560rpx;
}
.swiperBox swiper{
  height: 100%;
  width: 100%;
}
.swiperBox swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
.propertyName{
  height: 100rpx;
  line-height: 100rpx;
  color: rgba(48, 49, 51, 100);
  font-size: 40rpx;
  font-weight: 550;
  font-family: PingFangSC-bold;
  width: 690rpx;
  padding: 0 30rpx;
  margin-bottom: 15rpx;
  background: #FFFFFF;
}
.houseList{
  height: 100rpx;
  line-height: 100rpx;
  color: rgba(48, 49, 51, 100);
  font-size: 32rpx;
  font-weight: 550;
  font-family: PingFangSC-bold;
  width: 690rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
}
.effectDetailsList{
  width: 690rpx;
  padding: 20rpx 30rpx;
  display: flex;
  height: 160rpx;
  background: #FFFFFF;
  border-top:1rpx solid #f7f7f7;
}
.effectDetailsListImg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #DDDDDD;
  margin-right:40rpx;
}
.effectDetailsListImg image{
  width: 160rpx;
  height: 160rpx;
}
.effectDetailsListText{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.effectDetailsListTextName{
  color: rgba(48, 49, 51, 100);
  font-size: 28rpx;
  font-family: PingFangSC-regular
}
.effectDetailsListTextData{
  display: flex;
  justify-content: space-between;
}
.effectDetailsListTextArea{
  color: rgba(144, 147, 153, 100);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.effectDetailsListTextArea view image{
  width: 50rpx;
  height: 50rpx;
}
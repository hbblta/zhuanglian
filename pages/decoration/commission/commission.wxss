/* pages/decoration/commission/commission.wxss */
page{
  background: #f7f7f7;
  height: 100%;
}
.commissionType{
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  background: #FFFFFF;
  align-items: center;
  color: rgba(144, 147, 153, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  width: 100%;
}
.commissionType .nowCommissionType{
  color: #0081FF;
  font-weight: 550;
}
.generalSelectionBody{
  display: flex;
  height: 76%;
  overflow: hidden;
}
.generalSelectionlist{
  width: 200rpx;
  margin-top: 15rpx;
  background: #FFFFFF;
  margin-right: 18rpx;
}
.generalSelectionlist view{
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-family: Arial;
  font-size: 28rpx;
  color: #909399;
}
.generalSelectionlist .generalSelectionCurrent{
  background: #0081FF;
  color: #FFFFFF;
  font-weight: 550;
}
.effectPictureChecklistData{
  overflow: auto;
}
.constructionSiteDetaView{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 480rpx;
  height: 60rpx;
  padding: 15rpx;
  margin-top: 1rpx;
  margin-bottom: 15rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.constructionSiteDetaViewOne{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 480rpx;
  height: 40rpx;
  padding: 15rpx;
  margin-top: 15rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.constructionSiteDeta{
  display: flex;
  align-items: center;
  height: 60rpx;
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.constructionSiteDeta image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  transform: rotate(90deg);
}
.constructionSiteDetaNum{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.distributionDetailsList{
  height: 160rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  background: #FFFFFF;
  display: flex;
}
.distributionDetailsListHead{
  margin-right: 20rpx;
  height: 160rpx;
  width: 160rpx;
  background: #DDDDDD;
}
.distributionDetailsListHead image{
  height: 160rpx;
  width: 160rpx;
}
.distributionDetailsListText{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}
.distributionDetailsListText view{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.distributionDetailsListText view:nth-child(1){
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.distributionDetailsListText view:nth-child(2) image{
  width: 30rpx;
  height: 30rpx;
}
.searchInputViewBody{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  background: #FFFFFF;
  padding: 12rpx;
  width: 486rpx;
}
.searchInputView{
  display: flex;
  align-items: center;
  background-color: rgba(247, 247, 247, 1);
  padding-left: 20rpx;
  width: 466rpx;
}
.searchInputView .searchInput{
  width: 430rpx;
  height: 76rpx;
  border-radius: 12rpx;
  background-color: rgba(247, 247, 247, 1);
  font-family: PingFangSC-regular;
  font-size: 28rpx;
}
.constructionSiteDetaViewTwo{
  justify-content: space-around;
}
.constructionSiteDetaViewTwo .constructionSiteDetaNumTwo{
  color: #0081FF;
}
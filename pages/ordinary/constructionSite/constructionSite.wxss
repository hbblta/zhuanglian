/* pages/ordinary/constructionSite/constructionSite.wxss */
.constructionSiteDetaView{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 480rpx;
  height: 60rpx;
  padding: 15rpx;
  margin-top: 15rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.constructionSiteDeta{
  display: flex;
  align-items: center;
  height: 60rpx;
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.constructionSiteDeta image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  transform: rotate(90deg);
}
.constructionSiteDetaNum{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.constructionSiteList{
  margin-top: 16rpx;
  background: #FFFFFF;
  padding: 15rpx;
}
.constructionSiteListMsg{
  display: flex;
  width: 100%;
  padding-bottom: 25rpx;
}
.constructionSiteListMsgImg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #DDDDDD;
  margin-right: 22rpx;
}
.constructionSiteListMsgImg image{
  width: 160rpx;
  height: 160rpx;
}
.constructionSiteListMsgText{
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.constructionSiteListName{
  display: flex;
  justify-content: space-between;
}
.constructionSiteListName text:nth-child(1){
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.constructionSiteListName text:nth-child(2){
  color: #0081FF;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.constructionSiteListGray{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.onstructionSiteListCommunity{
  border-top: 1rpx solid #DDDDDD;
  width: 100%;
  height: 55rpx;
  line-height: 60rpx;
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
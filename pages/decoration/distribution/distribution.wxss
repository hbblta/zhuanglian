/* pages/decoration/distribution/distribution.wxss */
.materialOrderScroll{
  padding-bottom: 350rpx;
}
.materialOrderStatusList{
  white-space: nowrap;  
  height: 80rpx;
  width: 100%;
  background: #FFFFFF;
  margin-top: 15rpx;
}
.materialOrderStatus{
  display: inline-block;
  padding: 24rpx 16rpx;
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.materialOrderStatusNow{
  color: rgba(0, 129, 255, 1);
}
.materialOrderList{
  display: flex;
  width: 470rpx;
  height: 160rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.materialOrderListImg{
  width: 160rpx;
  height: 160rpx;
}
.materialOrderListImg image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #DDDDDD;
}
.materialOrderListText{
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 95%;
  margin-left: 5%;
}
.materialOrderListName{
  display: flex;
  height: 160rpx;
  justify-content: space-between;
  flex-direction: column;
}
.materialOrderListName view{
  color: #A7A9AE;
  font-size: 24rpx;
  font-family: PingFangSC-regular
}
.materialOrderListName view:nth-child(1){
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  display: flex;
  justify-content: space-between;
  font-weight: 550;
}
.materialOrderListName view:nth-child(1) image{
  height: 30rpx;
  width: 30rpx;
}
.materialOrderListButton{
  width: 100%;
  display: flex;
  height: 50rpx;
  align-items: center;
  justify-content: space-between;
  background: #FFFFFF;
  margin-bottom: 15rpx;
  border-top: 1rpx solid #f7f7f7;
  padding: 20rpx 0;
}
.materialOrderListButton text:nth-child(1){
  color: rgba(0, 129, 255, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.materialOrderListButton text:nth-child(2){
  display: block;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 60rpx;
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(191, 194, 204, 1);
}
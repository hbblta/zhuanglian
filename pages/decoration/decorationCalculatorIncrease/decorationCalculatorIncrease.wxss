/* pages/decoration/decorationCalculatorIncrease/decorationCalculatorIncrease.wxss */
page{
  background: #f7f7f7;
}
.decorationCalculatorIncrease{
  width: 700rpx;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 8rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(232, 231, 231, 0.4);
  margin-left: 25rpx;
  margin-top: 15rpx;
  background: #FFFFFF;
  position: relative;
}
.deleteImg{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -5rpx;
  top: -5rpx;
}
.decorationCalculatorIncreaseInput{
  height: 98rpx;
  width: 680rpx;
  padding-left: 20rpx;
  border: 2rpx solid rgba(247, 247, 247, 1);
}
.decorationCalculatorIncreaseInput input{
  height: 98rpx;
  width: 600rpx;
  font-weight: 550;
  color: rgba(48, 49, 51, 1);
  font-size: 32rpx;
  font-family: PingFangSC-bold;
}
.decorationCalculatorIncreaseText{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  width: 660rpx;
  padding-left: 20rpx;
}
.decorationCalculatorIncreaseTextPrice{
  display: flex;
  height: 100rpx;
  align-items: center;
}
.decorationCalculatorIncreaseTextPrice image{
  width: 30rpx;
  height: 40rpx;
}
.decorationCalculatorIncreaseTextPrice text{
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  margin-right: 30rpx;
}
.decorationCalculatorIncreaseUnit{
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.decorationCalculatorIncreaseMore{
  width: 700rpx;
  margin-left: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  display: flex;
  align-items: center;
}
.decorationCalculatorIncreaseMore image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.decorationCalculatorIncreaseMore view{
  color: rgba(0, 129, 255, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
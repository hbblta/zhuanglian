/* pages/decoration/secondaryManage/secondaryManage.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}
.scroll{
  width: 100%;
  height: calc(100% - 200rpx);
  box-sizing: border-box;
  border-top: 16rpx solid #f7f7f7;
  padding-bottom: 100rpx;
}
.manage-list{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
  display: flex;
  padding-top: 14rpx;
  background-color: #fff;
}
.manage-list>image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-left: 14rpx;
  margin-right: 34rpx;
}
.manage-list>.listInfo{
  display: inline-flex;
  height: 160rpx;
  flex-direction: column;
  justify-content: space-between;
}
.manage-list>.listInfo>view{
  font-size: 24rpx;
  color: #BCBEC1;
  line-height: 24rpx;
}
.manage-list>.listInfo>view:last-child{
  font-size: 28rpx;
  color: #FF7200;
}
.manage-list>.listInfo>view.statu{
  color: #0081FF;
}
.manage-list>.listInfo>view.title{
  font-weight: 550;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #303133;
}
.manage-list:last-child{
  border-bottom: none;
}
.manage-list .list-btn{
  position: absolute;
  width: 140rpx;
  height: 50rpx;
  line-height: 46rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1px solid #BFC2CC;
  color: #909399;
  font-size: 24rpx;
  bottom: 18rpx;
  right: 20rpx;
  border-radius: 60rpx;
}
.bottom-btn{
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #0081FF;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
}
.manage-list .selectedStyle{
  color: #ffffff;
  background: #0081FF;
}
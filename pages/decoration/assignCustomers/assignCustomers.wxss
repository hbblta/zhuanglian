/* pages/decoration/assignCustomers/assignCustomers.wxss */
page{
  background: #f7f7f7;
}
.assignCustomersList{
  margin-top: 15rpx;
  display: flex;
}
.assignCustomersSelecte{
  width: 80rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.assignCustomersSelecte image{
  width: 45rpx;
  height: 45rpx;
}
.assignCustomersData{
    height: 160rpx;
    padding: 20rpx 15rpx;
    width: 625rpx;
    background: #ffffff;
    border-radius: 4rpx;
    display: flex;
}
.assignCustomersDataImg{
  height: 160rpx;
  width: 160rpx;
  background: #dddddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.assignCustomersDataImg image{
  height: 160rpx;
  width: 160rpx;
}
.assignCustomersDataText{
  display: flex;
  flex-direction: column;
  height: 130rpx;
  justify-content: space-between;
  width: 100%;
}
.assignCustomersDataName{
  display: flex;
  justify-content: space-between;
}
.assignCustomersDataName>view:nth-child(1){
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.assignCustomersDataName>view:nth-child(2){
  display: flex;
}
.assignCustomersDataName>view:nth-child(2) image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 6rpx;
}
.assignCustomersDataPhone{
  display: flex;
  justify-content: space-between;
}
.assignCustomersDataPhone>view:nth-child(1),.assignCustomersDataDate{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
.assignCustomersDataPhone>view:nth-child(2){
  color: rgba(255, 114, 0, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
}
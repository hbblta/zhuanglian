/* pages/decoration/myShop/myShop.wxss */
page{
  background: #f7f7ff;
  position: relative;
  height: 100%;
}
.shopIocn{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
  background: #FFFFFF;
}
.shopIocn view image{
  width: 56rpx;
  height: 56rpx;
}
.shopIocn view view{
  color: rgba(191, 194, 204, 100);
  font-size: 20rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  text-align: center;
}
.nowIcon{
  color: #0081FF !important;
}
.swiperBox{
  height: 400rpx;
}
.swiperBox swiper{
  height: 100%;
  width: 100%;
}
.swiperBox swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
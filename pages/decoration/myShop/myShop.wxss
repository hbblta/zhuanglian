/* pages/decoration/myShop/myShop.wxss */
page{
  background: #f7f7ff;
  position: relative;
  height: 100%;
}
.shopIocn{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
  background: #FFFFFF;
}
.shopIocn view image{
  width: 56rpx;
  height: 56rpx;
}
.shopIocn view view{
  color: rgba(191, 194, 204, 100);
  font-size: 20rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  text-align: center;
}
.nowIcon{
  color: #0081FF !important;
}
.swiperBox{
  height: 400rpx;
}
.swiperBox swiper{
  height: 100%;
  width: 100%;
}
.swiperBox swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
.shopFeatures{
  display: flex;
  background: #FFFFFF;
  height: 200rpx;
  align-items: center;
  justify-content: space-around;
}
.shopFeatures view image{
  height: 80rpx;
  width: 80rpx;
  margin-left: 6rpx;
}
.shopFeatures view view{
  color: rgba(48, 49, 51, 100);
  font-size: 24rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  padding-top: 10rpx;
}
.introduction{
  margin-top: 15rpx;
  background: #FFFFFF;
  padding: 15rpx;
  width: 720rpx;
}
.introductionTitle{
  display: flex;
  justify-content: space-between;
}
.introductionTitle view,.introductionBody,.shopMapPhoneView view{
  color: rgba(85, 85, 85, 100);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.introductionTitle image{
  width: 30rpx;
  height: 30rpx;
}
.introductionBody{
  padding-top: 10rpx;
}
.shopMapPhone{
  background: #FFFFFF;
  margin-top: 15rpx;
}
.shopMapPhoneView{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15rpx;
  width: 720rpx;
  border-bottom: 1rpx solid #f7f7ff;
}
.shopMapPhoneView image{
  width: 80rpx;
  height: 80rpx;
}
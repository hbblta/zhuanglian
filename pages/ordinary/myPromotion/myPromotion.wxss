/* pages/ordinary/myPromotion/myPromotion.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}
.scroll{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.myPromotionList{
  margin-bottom: 16rpx;
}
.myPromotionImg{
  width: 100%;
  height: 320rpx;
}
.myPromotionListMsg{
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  align-items: center;
  padding: 20rpx;
  background: #FFFFFF;
}
.myPromotionListMuenTitle{
  color: rgba(48, 49, 51, 1);
  font-size: 32rpx;
  font-family: PingFangSC-bold;
  margin-bottom: 20rpx;
}
.myPromotionListMuenButton text:nth-child(1){
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 129, 255, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  margin-right: 26rpx;
  display: inline-block;
}
.myPromotionListMuenButton text:nth-child(2){
  display: inline-block;
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 40rpx;
  background-color:#FFFFFF;
  color: rgba(0, 129, 255, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 1rpx solid rgba(0, 129, 255, 1);
}
.myPromotionListMuenQCode{
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.myPromotionListMuenQCode image{
  width: 120rpx;
  height: 120rpx;
}
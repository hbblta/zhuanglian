/* pages/decoration/constructionDetails/constructionDetails.wxss */
page{
  background: #f7f7f7;
}
.materialOrderList{
  display: flex;
  width: 710rpx;
  height: 160rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.materialOrderListImg{
  width: 160rpx;
  height: 160rpx;
}
.materialOrderListImg image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #DDDDDD;
}
.materialOrderListText{
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 95%;
  margin-left: 5%;
}
.materialOrderListName{
  display: flex;
  height: 160rpx;
  justify-content: space-between;
  flex-direction: column;
}
.materialOrderListName view{
  color: #A7A9AE;
  font-size: 24rpx;
  font-family: PingFangSC-regular
}
.materialOrderListName view:nth-child(1){
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  display: flex;
  font-weight: 550;
  justify-content: space-between;
}
.materialOrderListName view:nth-child(1) text{
  color: #0081FF;
}
.constructionDetailsPickerAll{
  margin-top: 15rpx;
}
.constructionDetailsPicker{
  width: 720rpx;
  padding: 0 15rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  height: 80rpx;
  font-weight: 550;
  align-items: center;
  border-bottom:1rpx solid #f7f7f7;
}
.constructionDetailsPickerData{
  display: flex;
  height: 80rpx;
  align-items: center;
}
.constructionDetailsPickerData image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.constructionDetailsSelecte{
  width: 720rpx;
  padding: 0 15rpx;
  background: #FFFFFF;
  border-top: 15rpx solid #f7f7f7;
  border-bottom: 15rpx solid #f7f7f7;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  color: rgba(59, 59, 59, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  align-items: center;
  font-weight: 550;
}
.constructionDetailsSelecteImg view,.constructionDetailsSelecteImg{
  display: flex;
  align-items: center;
  height: 80rpx;
}
.constructionDetailsSelecteImg view{
  margin-right:25rpx;
}
.constructionDetailsSelecteImg view image{
  height: 35rpx;
  width: 35rpx;
  margin-left: 10rpx;
}
.constructionDetailsSchedule{
  width: 710rpx;
  height: 70rpx;
  background: #FFFFFF;
  padding: 40rpx 20rpx 30rpx;
}
.schedule{
  width: 710rpx;
  height: 10rpx;
  background: #f7f7f7;
  border-radius: 2rpx;
}
.scheduleDetails{
  background: #4FA3FB;
  width: 0%;
  height: 10rpx;
  border-radius: 2rpx;
  position: relative;
  transition:all 1.5s ease .5s;
}
.scheduleDetails::after{
  content: '';
  display: block;
  width: 0;
  height: 0;
  border: 15rpx solid transparent;
  border-bottom-color: #4FA3FB;
  border-top-width: 0;
  position: absolute;
  right: -15rpx;
  top: 20rpx;
}
.scheduleTextList{
  margin-top: 40rpx;
  position: relative;
}
.scheduleText{
  width: 710rpx;
  display: flex;
  justify-content: space-between;
  color: rgba(133, 133, 133, 1);
  font-size: 20rpx;
  font-family: PingFangSC-regular;
  position: absolute;
  z-index: 1;
}
.scheduleTextBlueList{
  overflow: hidden;
  width: 0%;
  transition:all 1.5s ease .5s;
}
.scheduleTextBlue{
  color: #4FA3FB;
  position: relative;
  z-index: 2;
  overflow: hidden;
  white-space:nowrap;
}
.report{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgba(0, 129, 255, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  margin-top: 15rpx;
}
.progressDetails{
  margin-top: 15rpx;
  width: 690rpx;
  padding:15rpx 30rpx 25rpx;
  background: #FFFFFF;
}
.progressDetailsTitle,.progressDetailsDate{
  display: flex;
  justify-content: space-between;
}
.progressDetailsTitle view:nth-child(1){
  color: rgba(0, 129, 255, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.progressDetailsTitle view:nth-child(2){
  color: rgba(255, 111, 28, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}
.progressDetailsDate view{
  color: rgba(144, 147, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  margin-top: 6rpx;
}
.progressDetailsImg{
  display: flex;
  margin-top: 25rpx;
}
.progressDetailsImg view{
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background: #DDDDDD;
  margin-left: 40rpx;
}
.progressDetailsImg view:nth-child(1){
  margin-left: 0rpx;
}
.progressDetailsImg view image{
  width: 140rpx;
  height: 140rpx;
}
.progressDetailsText{
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-family: PingFangSC-bold;
  margin-top: 15rpx;
}
.progressDetailsText text{
  color: rgba(48, 49, 51, 1);
  font-size: 28rpx;
  font-weight: 550;
}
.progressDetailsButton{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  background-color: rgba(247, 247, 247, 1);
  color: rgba(144, 147, 153, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  margin-top: 35rpx;
}
